<h2>Sign up</h2>

<form method="post" action="/auth/login">
	<div class="form-group">
		<label>First Name:</label>
		<input type="text" name="firstname" class="form-control" placeholder="Larry">
	</div>
	<div class="form-group">
		<label>Last Name:</label>
		<input type="text" name="lastname" class="form-control" placeholder="Da cable guy">
	</div>
	<div class="form-group">
		<label>Display Name:</label>
		<input type="text" name="displayname" class="form-control" placeholder="nickname!"></input>
	</div>
	<div class="form-group">
		<label>Email:</label>
		<input type="text" name="email" class="form-control" placeholder="Email please!">
	</div>
	<div class="form-group">
		<label>Password</label>
		<input type="password" name="passwordVerify" class="form-control" placeholder="Your secret!"
		>
	</div>
	<input type="submit" name="login" class="btn btn-success">
</form>